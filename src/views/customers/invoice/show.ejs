<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head', { title: ' | My purchases' }) %>
</head>

<body class="bg-white text-gray-600 work-sans leading-normal text-base tracking-normal">
    <!--Nav-->
    <%- include('../../partials/nav') %>

    <!-- My Purchases -->
    <section class="bg-white border-b py-8">
        <div class="container max-w-5xl mx-auto m-8">
            <h1 class="w-full my-2 text-5xl font-bold leading-tight text-center text-gray-800">
                Invoice #<%= invoice.id %>
            </h1>
            <div class="w-full mb-4">
                <div class="h-1 mx-auto gradient w-64 opacity-25 my-0 py-0 rounded-t">Items</div>
            </div>
            <div class="flex flex-wrap">
                <!-- invoice -->
                <% if (invoice) { %>
                    <% invoice.items.forEach(item => { %>
                        <div class="w-full md:w-1/2 xl:w-1/3 p-6">
                            <div class="bg-white border rounded shadow">
                                <img 
                                    class="rounded-t" 
                                    src="<%= item.product.images[0].path ?? 'https://source.unsplash.com/collection/1346951/600x400' %>"
                                />
                                <div class="p-5">
                                    <h3 class="text-gray-800 text-3xl font-bold leading-none mb-3">
                                        <%= item.product.name %>
                                    </h3>
                                    <p class="text-gray-600 mb-8">
                                        <%= item.product.description %>
                                    </p>
                                    <a href="/products/<%= item.product.slug %>" 
                                        class="text-xl font-bold text-gray-800 hover:text-gray-700 no-underline"
                                    >View Product</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('../../partials/footer') %>
</body>

</html>